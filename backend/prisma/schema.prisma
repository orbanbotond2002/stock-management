generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  admin
  manager
  viewer
}

enum MovementType {
  IN
  OUT
  TRANSFER
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  role         UserRole  @default(viewer)
  createdAt    DateTime  @default(now())

  stockMovements StockMovement[] @relation("CreatedBy")

  @@map("users")
}

model Product {
  id          String   @id @default(uuid())
  sku         String   @unique
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  stocks         Stock[]
  stockMovements StockMovement[]

  @@map("products")
}

model Warehouse {
  id        String   @id @default(uuid())
  name      String
  location  String?
  createdAt DateTime @default(now())

  stocks              Stock[]
  sourceMovements     StockMovement[] @relation("SourceWarehouse")
  targetMovements     StockMovement[] @relation("TargetWarehouse")

  @@map("warehouses")
}

model Stock {
  id          String    @id @default(uuid())
  productId   String
  warehouseId String
  quantity    Int       @default(0)
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())

  product   Product   @relation(fields: [productId], references: [id])
  warehouse Warehouse @relation(fields: [warehouseId], references: [id])

  @@unique([productId, warehouseId])
  @@map("stocks")
}

model StockMovement {
  id                String       @id @default(uuid())
  productId         String
  type              MovementType
  sourceWarehouseId String?
  targetWarehouseId String?
  quantity          Int
  createdBy         String
  createdAt         DateTime     @default(now())

  product         Product    @relation(fields: [productId], references: [id])
  sourceWarehouse Warehouse? @relation("SourceWarehouse", fields: [sourceWarehouseId], references: [id])
  targetWarehouse Warehouse? @relation("TargetWarehouse", fields: [targetWarehouseId], references: [id])
  creator         User       @relation("CreatedBy", fields: [createdBy], references: [id])

  @@map("stock_movements")
}